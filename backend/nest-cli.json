{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../public/**/*",
        "outDir": "dist/public"
      },
      {
        "include": "../views/**/*",
        "outDir": "dist/views"
      },
      {
        "include": "../secrets/**/*",
        "outDir": "dist/secrets"
      }
    ]
  }
}
